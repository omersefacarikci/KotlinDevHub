<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnnokta"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/antrasit"
        android:text="."
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnesit"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="167dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/antrasit"
        android:fontFamily="sans-serif"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnnokta"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/antrasit"
        android:fontFamily="sans-serif"
        android:text="1"
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn0"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/antrasit"
        android:fontFamily="sans-serif"
        android:text="3"
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btnnokta"
        app:layout_constraintEnd_toStartOf="@+id/btntopla"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/antrasit"
        android:fontFamily="sans-serif"
        android:text="2"
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn0"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/antrasit"
        android:fontFamily="sans-serif"
        android:text="4"
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/antrasit"
        android:fontFamily="sans-serif"
        android:text="6"
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn3"
        app:layout_constraintEnd_toStartOf="@+id/btncikar"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/antrasit"
        android:fontFamily="sans-serif"
        android:text="5"
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn2"
        app:layout_constraintEnd_toStartOf="@+id/btn6"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/antrasit"
        android:fontFamily="sans-serif"
        android:text="7"
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn4"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/antrasit"
        android:fontFamily="sans-serif"
        android:text="9"
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn6"
        app:layout_constraintEnd_toStartOf="@+id/btncarp"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/antrasit"
        android:fontFamily="sans-serif"
        android:text="8"
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn5"
        app:layout_constraintEnd_toStartOf="@+id/btn9"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btnyuzde"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/gri"
        android:text="%"
        android:textColor="@color/yazirenk2"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn9"
        app:layout_constraintEnd_toStartOf="@+id/btnbol"
        app:layout_constraintStart_toEndOf="@+id/btnartieksi"
        app:rippleColor="@color/antrasit" />

    <Button
        android:id="@+id/btntemizle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/gri"
        android:fontFamily="sans-serif"
        android:text="C"
        android:textColor="@color/yazirenk2"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn7"
        app:layout_constraintEnd_toStartOf="@+id/btnartieksi"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/antrasit" />

    <Button
        android:id="@+id/btnartieksi"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/gri"
        android:text="+/-"
        android:textColor="@color/yazirenk2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btn8"
        app:layout_constraintEnd_toStartOf="@+id/btnyuzde"
        app:layout_constraintStart_toEndOf="@+id/btntemizle"
        app:rippleColor="@color/antrasit" />

    <Button
        android:id="@+id/btnbol"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/turuncu"
        android:text="รท"
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btncarp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnyuzde"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btncikar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/turuncu"
        android:text="-"
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btntopla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btntopla"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/turuncu"
        android:text="+"
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btnesit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btncarp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/turuncu"
        android:text="ร"
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btncikar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:rippleColor="@color/gri" />

    <Button
        android:id="@+id/btnesit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/turuncu"
        android:text="="
        android:textColor="@color/yazirenk"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnnokta"
        app:rippleColor="@color/gri" />

    <TextView
        android:id="@+id/output"
        android:layout_width="366dp"
        android:layout_height="154dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="17dp"
        android:fontFamily="sans-serif-light"
        android:textAlignment="textEnd"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/btnyuzde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input" />

    <TextView
        android:id="@+id/input"
        android:layout_width="341dp"
        android:layout_height="44dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="sans-serif-light"
        android:textAlignment="textEnd"
        android:textColor="@color/gri"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/output"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>